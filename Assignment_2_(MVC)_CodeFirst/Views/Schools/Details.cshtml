@model Assignment_2__MVC__CodeFirst.Models.Entities.School

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container">
    <h4>School</h4>
    <hr />
    <div class="container">

        <div class="row">
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.Name)
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.StartDate)
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.StartDate)
            </div>
        </div>

        <br />
                
        <div class="row">
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.Courses) | 
                @Html.ActionLink("New", "Create", "Courses")
            </div>
            <div class="col-md-9">
                <table>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var c in Model.Courses)
                    {
                        <tr>
                            <td>@Html.ActionLink(c.Title, "Details", "Courses", new { id = c.ID }, null)&emsp;</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Courses", new { id = c.ID }, null) | 
                                @Html.ActionLink("Delete", "Delete", "Courses", new { id = c.ID }, null)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.Trainers) |
                @Html.ActionLink("New", "Create", "Trainers")
            </div>
            <div class="col-md-9">
                <table>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var t in Model.Trainers)
                    {
                        <tr>
                            <td>@Html.ActionLink(t.FullName, "Details", "Trainers", new { id = t.ID }, null)&emsp;</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Trainers", new { id = t.ID }, null) | 
                                @Html.ActionLink("Delete", "Delete", "Trainers", new { id = t.ID }, null)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        
        <br />

        <div class="row">
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.Students) |
                @Html.ActionLink("New", "Create", "Students")
            </div>
            <div class="col-md-9">
                <table>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var s in Model.Students)
                    {
                        <tr>
                            <td>@Html.ActionLink(s.FullName, "Details", "Students", new { id = s.ID }, null)&emsp;</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Students", new { id = s.ID }, null) | 
                                @Html.ActionLink("Delete", "Delete", "Students", new { id = s.ID }, null)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        
    </div>
    <br />
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

