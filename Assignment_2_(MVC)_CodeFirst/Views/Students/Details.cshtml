@model Assignment_2__MVC__CodeFirst.Models.Entities.Student

@{
    ViewBag.Title = "Details";
}

<h2>@Model.FullName</h2>

<div>
    <h4>Student</h4>
    <hr />
    <div class="container">

        <div class="ditails-form text-center">
            <div class="row">
                <div class="col-md-3">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.FullName):</label>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.FullName)
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.StartDate):</label>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.StartDate)
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.School):</label>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.School.Name)
                </div>
            </div>
        </div>

        <br />

        <div class="row">
            <div>
                <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Courses):</label>
                <div class="table-responsive" style="margin-top: 11px;">
                    <table class="table table-striped table-hover">
                        @foreach (var c in Model.Courses)
                        {
                            <tr class="text-center" scope="row">
                                <td scope="col">@Html.ActionLink(c.Title, "Details", "Courses", new { id = c.ID }, null)</td>
                                <td scope="col">
                                    @Html.ActionLink("Edit", "Edit", "Courses", new { id = c.ID }, null) | 
                                    @Html.ActionLink("Delete", "Delete", "Courses", new { id = c.ID }, null)
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>

        <br />

        <div class="row">
            <div>
                <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Assignments):</label>
                <div class="table-responsive" style="margin-top: 11px;">
                    <table class="table table-striped table-hover">
                        @foreach (var a in Model.Assignments)
                        {
                            <tr class="text-center" scope="row">
                                <td scope="col">@Html.ActionLink(a.Title, "Details", "Assignments", new { id = a.ID }, null)</td>
                                <td scope="col">
                                    @Html.ActionLink("Edit", "Edit", "Assignments", new { id = a.ID }, null) | 
                                    @Html.ActionLink("Delete", "Delete", "Assignments", new { id = a.ID }, null)
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>

        <br />

    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back", "Details", "Schools", new { id = @Model.School.ID }, null)
</p>
